<Page x:Class="PharmaControl.WPF.Pages.MedicinePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PharmaControl.WPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Лекарства"
      Loaded="Page_Loaded">

    <Grid Style="{StaticResource BorderGrid}">
        <StackPanel Margin="20">

            <DataGrid x:Name="MedicinesDataGrid" 
                      AutoGenerateColumns="False" 
                      Height="350"
                      Margin="0,0,0,20">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="150"/>
                    <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="200"/>
                    <DataGridTextColumn Header="Цена" Binding="{Binding Price}" Width="80"/>
                    <DataGridCheckBoxColumn Header="Рецепт" Binding="{Binding RequiresPrescription}" Width="80"/>
                    <DataGridTextColumn Header="Срок действия" Binding="{Binding BestBeforeDate, StringFormat=dd.MM.yyyy}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="ShowMedicineTypeBtn" 
                        Content="Инфо. о типе лекарства" 
                        Click="ShowMedicineTypeBtn_Click"/>
                <Button Name="ShowPharmacyStockBtn" 
                        Content="Остаток на складе" 
                        Click="ShowPharmacyStockBtn_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
