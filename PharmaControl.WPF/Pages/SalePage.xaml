<Page x:Class="PharmaControl.WPF.Pages.SalePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PharmaControl.WPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Оформление продажи"
      >

    <Grid Style="{StaticResource BorderGrid}">
        <Border Margin="30" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center">

            <StackPanel Width="210">

                <TextBlock Text="Лекарство:" />
                <TextBox x:Name="MedicineNameTextBox"/>

                <TextBlock Text="Количество:" />
                <TextBox x:Name="AmountTextBox" 
                         Text="1"/>

                <TextBlock Text="Метод оплаты:"/>
                <ComboBox x:Name="PaymentMethodComboBox" 
                          SelectedIndex="1">
                    <ComboBoxItem Content="Наличные" />
                    <ComboBoxItem Content="Карта"/>
                    <ComboBoxItem Content="Страховка"/>
                </ComboBox>

                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center">
                    <Button x:Name="CreateSaleButton" 
                            Content="Оформить продажу" 
                            Click="CreateSaleButton_Click"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Page>
