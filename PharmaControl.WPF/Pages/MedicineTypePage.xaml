<Page x:Class="PharmaControl.WPF.Pages.MedicineTypePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PharmaControl.WPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MedicineTypePage"
      Loaded="Page_Loaded">

    <Grid Background="White">
        <StackPanel Margin="20">
            
            <DataGrid x:Name="MedicineTypesDataGrid" 
                      AutoGenerateColumns="False" 
                      Height="350"
                      Margin="0,0,0,20">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="200"/>
                    <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="500"/>
                </DataGrid.Columns>
            </DataGrid>

        </StackPanel>
    </Grid>
</Page>
