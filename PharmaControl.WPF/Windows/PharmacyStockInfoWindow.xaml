<Window x:Class="PharmaControl.WPF.Windows.PharmacyStockInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PharmaControl.WPF.Windows"
        mc:Ignorable="d"
        Title="На складе" Height="150" Width="450"
        Loaded="Window_Loaded">
    <Grid>
        <Border Margin="10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="5"  Color="Black" Direction="5"/>
            </Border.Effect>
            <Grid Background="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Колличество:" VerticalAlignment="Bottom"/>
                <TextBlock Text="Минимальное колчество:" Grid.Row="1" VerticalAlignment="Top"/>
                <TextBlock Text="Количество для повторного заказа:" Grid.Row="2" VerticalAlignment="Top"/>

                <TextBox x:Name="QuantityTextBox" Grid.Column="1" IsReadOnly="True"/>
                <TextBox x:Name="MinStockLevelTextBox" Grid.Column="1" Grid.Row="1" IsReadOnly="True"/>
                <TextBox x:Name="ReorderQuantityTextBox" Grid.Column="1" Grid.Row="2" IsReadOnly="True"/>
            </Grid>
        </Border>
    </Grid>
</Window>
