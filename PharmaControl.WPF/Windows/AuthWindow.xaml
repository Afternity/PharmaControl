<Window x:Class="PharmaControl.WPF.Windows.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PharmaControl.WPF.Windows"
        mc:Ignorable="d"
        Title="Авторизация" Height="200" Width="400" 
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Grid>

        <Border Margin="33">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="5"  Color="Black" Direction="5"/>
            </Border.Effect>
            <Grid Background="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Email:" VerticalAlignment="Bottom"/>
                <TextBlock Text="Пароль:" Grid.Row="1" VerticalAlignment="Bottom"/>

                <TextBox x:Name="EmailTextBox" Grid.Column="1"/>
                <TextBox x:Name="PasswordTextBox" Grid.Column="1" Grid.Row="1"/>

                <Button x:Name="AuthButton" Click="AuthButton_Click" Content="Вход" Grid.Column="1" Grid.Row="2"/>
            </Grid>
        </Border>

    </Grid>
</Window>
